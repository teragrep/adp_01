<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
  <property>
    <name>ssl.server.truststore.location</name>
    <value>/opt/teragrep/hdp_03/jks/server-truststore.jks</value>
    <description>Truststore to be used by NN and DN. Must be specified.</description>
  </property>
  <property>
    <name>ssl.server.truststore.password</name>
    <value>{{.Values.hdfs.jkspassword}}</value>
    <description>Optional. Default value is "".</description>
  </property>
  <property>
    <name>ssl.server.truststore.type</name>
    <value>jks</value>
    <description>Optional. The keystore file format, default value is "jks".</description>
  </property>
  <property>
    <name>ssl.server.truststore.reload.interval</name>
    <value>10000</value>
    <description>Truststore reload check interval, in milliseconds.
    Default value is 10000 (10 seconds).</description>
  </property>
  <property>
    <name>ssl.server.keystore.location</name>
    <value>/opt/teragrep/hdp_03/jks/server-keystore.jks</value>
    <description>Keystore to be used by NN and DN. Must be specified.</description>
  </property>
  <property>
    <name>ssl.server.keystore.password</name>
    <value>{{.Values.hdfs.jkspassword}}</value>
    <description>Must be specified.</description>
  </property>
  <property>
    <name>ssl.server.keystore.keypassword</name>
    <value>{{.Values.hdfs.jkspassword}}</value>
    <description>Must be specified.</description>
  </property>
  <property>
    <name>ssl.server.keystore.type</name>
    <value>jks</value>
    <description>Optional. The keystore file format, default value is "jks".</description>
  </property>
  <property>
    <name>ssl.server.exclude.cipher.list</name>
    <value>TLS_ECDHE_RSA_WITH_RC4_128_SHA,SSL_DHE_RSA_EXPORT_WITH_DES40_CBC_SHA,SSL_RSA_WITH_DES_CBC_SHA,SSL_DHE_RSA_WITH_DES_CBC_SHA,
    SSL_RSA_EXPORT_WITH_RC4_40_MD5,SSL_RSA_EXPORT_WITH_DES40_CBC_SHA,SSL_RSA_WITH_RC4_128_MD5,TLS_RSA_WITH_AES_128_CBC_SHA,
    TLS_RSA_WITH_AES_256_CBC_SHA,TLS_RSA_WITH_AES_128_CBC_SHA256,TLS_RSA_WITH_AES_256_CBC_SHA256,TLS_RSA_WITH_AES_128_GCM_SHA256,
    TLS_RSA_WITH_AES_256_GCM_SHA384,TLS_ECDH_RSA_WITH_AES_128_CBC_SHA,TLS_ECDH_ECDSA_WITH_AES_128_CBC_SHA,TLS_ECDH_RSA_WITH_AES_256_CBC_SHA,
    TLS_ECDH_ECDSA_WITH_AES_256_CBC_SHA,TLS_DHE_DSS_WITH_AES_128_CBC_SHA,TLS_DHE_RSA_WITH_AES_128_CBC_SHA,TLS_DHE_DSS_WITH_AES_256_CBC_SHA,
    TLS_DHE_RSA_WITH_AES_256_CBC_SHA,TLS_ECDHE_RSA_WITH_AES_128_CBC_SHA,TLS_ECDHE_ECDSA_WITH_AES_256_CBC_SHA,
    TLS_ECDHE_RSA_WITH_AES_256_CBC_SHA,TLS_ECDHE_ECDSA_WITH_AES_128_CBC_SHA</value>
    <description>Optional. The weak security cipher suites that you want excluded
    from SSL communication.</description>
  </property>
</configuration>
